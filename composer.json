{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "monicahq/monica",
    "type": "project",
    "description": "Monica is a personal relationship manager.",
    "keywords": [
        "laravel",
        "crm",
        "prm",
        "social"
    ],
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Regis Freyd",
            "homepage": "https://github.com/djaiss"
        },
        {
            "name": "Alexis Saettler",
            "homepage": "https://github.com/asbiin"
        }
    ],
    "require": {
        "php": "^8.2",
        "asbiin/laravel-localizer": "^4.0",
        "driftingly/rector-laravel": "^2.0",
        "joshbrw/laravel-module-installer": "^2.0",
        "laravel/fortify": "^1.30",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.2",
        "laravel/tinker": "^2.10.1",
        "livewire/flux": "^2.1.1",
        "livewire/volt": "^1.7.0",
        "nwidart/laravel-modules": "^12.0"
    },
    "require-dev": {
        "amirami/localizator": "^0.14.0-alpha",
        "fakerphp/faker": "^1.23",
        "laravel-lang/common": "^6.7",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.25",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "rector/rector": "^2.1",
        "stichoza/google-translate-php": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "monica:localize-check": "php artisan monica:localize --check",
        "monica:pint": "./vendor/bin/pint --parallel",
        "monica:prettier": "npx prettier --write resources/",
        "monica:rector": "./vendor/bin/rector"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "joshbrw/laravel-module-installer": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
